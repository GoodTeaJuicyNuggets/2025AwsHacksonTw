<style>
    /* 全局樣式 */
    body {
        font-family: 'Roboto', 'Open Sans', sans-serif;
        color: #ffffff;
        background-color: #1a1a1a; /* 深色背景 */
    }

    /* 卡片樣式 */
    .card {
        background-color: #2a2a2a; /* 深灰色背景 */
        border: 1px solid #444; /* 灰色邊框 */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        background-color: #333333; /* 更深的灰色 */
        color: #ffffff;
        font-weight: bold;
        font-size: 16px;
        padding: 10px 15px;
        border-bottom: 1px solid #444;
    }

    .card-body {
        padding: 20px;
    }

    /* 標籤樣式 */
    .col-form-label {
        color: #b3b3b3; /* 淡灰色文字 */
        font-size: 14px;
        font-weight: bold;
    }

    /* 輸入框樣式 */
    .form-control {
        background-color: #1a1a1a; /* 深色背景 */
        color: #ffffff;
        border: 1px solid #444;
        border-radius: 5px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #6a11cb; /* 紫色高亮 */
            box-shadow: 0 0 5px #6a11cb;
        }

    /* 小提示文字 */
    .form-text {
        color: #b3b3b3 !important;
        font-size: 12px;
    }

    /* 間距調整 */
    .mb-3 {
        margin-bottom: 20px !important;
    }

    .mt-3 {
        margin-top: 20px !important;
    }

    .hint{
        color: white !important;
    }
</style>

@using (Html.BeginForm())
{
    <div class="card">
        <div class="card-header">
            基礎參數 (Basic Parameters)
        </div>
        <div class="card-body">
            <div class="mb-3 row">
                <label for="ImageWidth" class="col-sm-4 col-form-label">圖像寬度 (Width)</label>
                <div class="col-sm-8">
                    @Html.TextBox("ImageWidth", "512", new { @class = "form-control", id = "ImageWidth" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="ImageHeight" class="col-sm-4 col-form-label">圖像高度 (Height)</label>
                <div class="col-sm-8">
                    @Html.TextBox("ImageHeight", "512", new { @class = "form-control", id = "ImageHeight" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="ImageQuality" class="col-sm-4 col-form-label">圖像品質 (Quality)</label>
                <div class="col-sm-8">
                    @Html.TextBox("ImageQuality", "Standard", new { @class = "form-control", id = "ImageQuality" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="CfgScale" class="col-sm-4 col-form-label">提示彈性 (cfgScale)</label>
                <div class="col-sm-8">
                    @Html.TextBox("CfgScale", "7.5", new { @class = "form-control", id = "CfgScale", placeholder = "建議值為 7.0-8.0" })
                    <small class="form-text text-muted">*建議值為 7.0-8.0</small>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Seed" class="col-sm-4 col-form-label">變化性參數 (Seed)</label>
                <div class="col-sm-8">
                    @Html.TextBox("Seed", "0", new { @class = "form-control", id = "Seed", placeholder = "預設為 0" })
                    <small class="form-text text-muted">*預設為 0</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            額外參數 (Optional Parameters)
        </div>
        <div class="card-body">
            <div class="mb-3 row">
                <label for="NegativeText" class="col-sm-4 col-form-label">負面樣本文字 (Negative Text)</label>
                <div class="col-sm-8">
                    @Html.TextBox("NegativeText", "blurry, distorted", new { @class = "form-control", id = "NegativeText" })
                    <small class="form-text text-muted">*上限100字元</small>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="NumberOfImages" class="col-sm-4 col-form-label">圖片數量 (Number of images)</label>
                <div class="col-sm-8">
                    @Html.TextBox("NumberOfImages", "1", new { @class = "form-control", id = "NumberOfImages" })
                    <small class="form-text text-muted">*1-5張</small>
                </div>
            </div>
        </div>
    </div>
}
