@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoolerMaster AI Agent</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <div class="container py-5">
        <h2 class="text-center mb-4">CoolerMaster Imager</h2>
        <div class="d-flex align-items-center mb-4">
            <select class="form-select action-dropdown me-2" id="actionDropdown" aria-label="Action Options">
                <option selected disabled>Choose Action</option>
                <option value="generate">Generate</option>
                <option value="adjust">Adjust</option>
                <option value="extend-idea">Extend Idea</option>
                <option value="merge">Merge</option>
            </select>
            <button class="btn btn-primary" id="importButton">Import Website Images</button>
            <button class="btn btn-success ms-auto" id="uploadButton">Upload</button>
        </div>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="upload-area border border-primary rounded d-flex align-items-center justify-content-center p-3" id="uploadArea">
                    Click or drag an image here to upload
                </div>
            </div>
            <div class="col-md-6">
                <div class="image-preview border border-secondary rounded d-flex align-items-center justify-content-center p-3">
                    <img id="previewImage" alt="Image Preview" class="img-fluid" />
                </div>
            </div>
        </div>
        <div class="input-group mt-4">
            <select class="form-select category-dropdown" id="categoryDropdown" aria-label="Product Category">
                <option selected disabled>Choose Category</option>
                <option value="pc-cases">PC Cases</option>
                <option value="cooler">Cooler</option>
                <option value="accessories">Accessories</option>
            </select>
            <input type="text" class="form-control" id="textBox" placeholder="Enter text here...">
            <button class="btn btn-outline-success" id="generateButton">Generate</button>
        </div>
    </div>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/index.js"></script>
</body>
