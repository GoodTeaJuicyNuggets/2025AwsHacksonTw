@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>蝦皮風格圖片展示</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/selector.css">
</head>
<body>
    <div class="container py-4">
        <div class="row">
            <div class="col-md-9">
                <!-- Product Grid -->
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-1 justify-content-center" id="product-grid">
                    <div class="col d-flex justify-content-center" data-category="pc-cases">
                        <div class="img-card">
                            <img src="https://a.storyblok.com/f/281110/960x960/39f09cd23c/elite-301-white-gallery-02.png/m/960x0/smart" alt="商品 1">
                            <div class="card-footer">商品名稱 1</div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center" data-category="power-supply">
                        <div class="img-card">
                            <img src="https://a.storyblok.com/f/281110/960x960/39f09cd23c/elite-301-white-gallery-02.png/m/960x0/smart" alt="商品 2">
                            <div class="card-footer">商品名稱 2</div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center" data-category="cooler">
                        <div class="img-card">
                            <img src="https://a.storyblok.com/f/281110/960x960/39f09cd23c/elite-301-white-gallery-02.png/m/960x0/smart" alt="商品 3">
                            <div class="card-footer">商品名稱 3</div>
                        </div>
                    </div>
                    <div class="col d-flex justify-content-center" data-category="pc-cases">
                        <div class="img-card">
                            <img src="https://a.storyblok.com/f/281110/960x960/39f09cd23c/elite-301-white-gallery-02.png/m/960x0/smart" alt="商品 4">
                            <div class="card-footer">商品名稱 4</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <!-- Filter Section -->
                <div class="filter-section">
                    <h5>篩選</h5>
                    <form>
                        <!-- Product Category Filter -->
                        <div class="mb-3">
                            <label for="product-category" class="form-label">產品類別</label>
                            <select id="product-category" class="form-select" multiple>
                                <option value="pc-cases">PC Cases</option>
                                <option value="power-supply">Power Supply</option>
                                <option value="cooler">Cooler</option>
                            </select>
                            <div id="selected-category-filters" class="selected-filters"></div>
                        </div>

                        <!-- Image Source Filter -->
                        <div class="mb-3">
                            <label for="image-source" class="form-label">圖片來源</label>
                            <select id="image-source" class="form-select" multiple>
                                <option value="official">官網</option>
                                <option value="uploaded">自行上傳</option>
                                <option value="ai-draft">AI草稿</option>
                                <option value="ai-final">AI成品</option>
                            </select>
                            <div id="selected-image-filters" class="selected-filters"></div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/selector.js"></script>
</body>
</html>
